<div class="container">
  <h1>Log In</h1>

  <%= form_tag sessions_path do %>
    <div class="field">
      <div class="label"> <%= label_tag :email %> </div>
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <div class="label"> <%= label_tag :password %> </div>
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag "Log In" %>
    </div>
  </div>
  <% end %>
