<body>
    <h1>Seat Yourself</h1>


    <h2>Search For</h2>

    <%= form_tag restaurants_path, :method => 'get' do %>

      <p><%= label_tag("Restaurant Name, Location, or Category:") %></p>
      <p><%= text_field_tag :search, params[:search] %></p>
      <p><%= submit_tag("Seat Me") %></p>

    <% end %>

  <h6>This is to push shit around cause im lazy af</h6>

    <h2>All Restaurants</h2>

    <% @restaurants.each do |restaurant| %>
      <p><%= restaurant.name %></p>
      <p><%= restaurant.location %></p>
      <p><%= restaurant.phone_number %></p>
      <p><%= restaurant.category %></p>
      <p><%= restaurant.description %></p>
      <p><%= link_to "Make Reservation", "/restaurants/#{restaurant.id}" %></p>
    <% end %>


</body>
